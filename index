<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Redirecting...</title>
  <script>
    // Custom logic for app deep linking
    const urlParams = new URLSearchParams(window.location.search);
    const ref = urlParams.get("ref") || "";
    const screen = urlParams.get("screen") || "home";

    // Try to open the app
    const scheme = `myapp://open?ref=${ref}&screen=${screen}`;

    window.location.href = scheme;

    // If app not installed, redirect to Play Store after a delay
    setTimeout(() => {
      window.location.href = "https://play.google.com/store/apps/details?id=chatme.nxt";
    }, 2000);
  </script>
</head>
<body>
  <p>Redirecting to the app...</p>
</body>
</html>
